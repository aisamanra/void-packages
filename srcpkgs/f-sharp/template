function do_extract {
	mkdir -p ${wrksrc}
	cp ${XBPS_SRCDISTDIR}/${pkgname}-${version}/${pkgname}-${version} ${wrksrc}/${curfile}
}

function do_configure {
	./autogen.sh --prefix /usr
}
