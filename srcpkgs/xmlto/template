# Template file for 'xmlto'
pkgname=xmlto
version=0.0.26
revision=2
build_style=gnu-configure
hostmakedepends="libxslt docbook-xsl"
depends="${hostmakedepends}"
short_desc="Tool to help transform XML documents into other formats"
